{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "angular/mocks": true,
    "es6": true
  },
  "plugins": [ "angular" ],
  "globals": {
    "moment": true,
    "saveAs": true
  },
  "extends": [
    "eslint:recommended",
    "es6-recommended",
    "angular"
  ],
  "rules": {
    "quotes": [ 2, "single" ],
    "no-unused-labels": "off",
    "angular/on-watch": "warn",
    "angular/controller-as": "warn",
    "angular/no-service-method": "warn",
    "angular/no-services": "warn",
    "angular/controller-as-vm": [ 2, "$ctrl" ],
    "angular/di": [
      2,
      "array",
      { "matchNames": false }
    ]
  }
}
