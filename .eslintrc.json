{
  "env": {
    "browser": true,
    "jasmine": true,
    "angular/mocks" :  true
  },
  "plugins": [ "angular"],
  "globals": {
    "moment": true,
    "saveAs":  true 
  },
  "extends": [
    "eslint:recommended",
    "angular"
  ],
  "rules": {
    "quotes": [ 2, "single" ],
    "angular/on-watch": "warn",
    "angular/controller-as-vm": [ 2, "$ctrl" ],
    "angular/di": [
      2,
      "array",
      { "matchNames": false }
    ]
  }
}
